<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0"> 
       
	<display-name>Computer Database</display-name>
	<description>This project is a implementation of the training program
		in eBusiness Information on java technologies.</description>


	<context-param>
	    <param-name>contextConfigLocation</param-name>
	    <param-value>classpath:/applicationContext.xml</param-value>
	</context-param>

	<listener>
	   <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/views/403.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/views/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/views/500.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.IllegalArgumentException</exception-type>
		<location>/WEB-INF/views/403.jsp</location>
	</error-page>
	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/WEB-INF/views/500.jsp</location>
	</error-page>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
